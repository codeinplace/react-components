{
  "compilerOptions": {
    "target": "ES2015",
    "lib": ["DOM"],
    "module": "commonjs",
    "declaration": true,
    "outDir": "./lib",
    "strict": true,
    "jsx": "react",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "resolveJsonModule": true
  },

  "include": ["src"],
  "exclude": ["node_modules", "src/tests", "example"]
}
