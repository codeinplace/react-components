{
  "name": "@codeinplace/react-components",
  "version": "0.0.1",
  "main": "dist/index.js",
  "description": "Various react components to be used with https://github.com/Rocketseat/unform and https://github.com/styled-components/styled-components",
  "repository": "https://github.com/codeinplace/react-components.git",
  "author": "CodeInPlace <admin@codeinplace.com>",
  "license": "UNLICENCED",
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "sucrase ./src -d ./dist --transforms typescript,imports",
    "prepublishOnly": "yarn test && yarn build",
    "test": "jest"
  },
  "peerDependencies": {
    "react": "^16.12.0",
    "react-dom": "^16.12.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "@sucrase/jest-plugin": "^2.0.0",
    "@testing-library/jest-dom": "^5.1.1",
    "@testing-library/react": "^9.4.1",
    "@types/jest": "^25.1.3",
    "@types/react": "^16.9.23",
    "@types/react-dom": "^16.9.5",
    "commitizen": "^4.0.3",
    "husky": "^4.2.3",
    "jest": "^25.1.0",
    "react": "^16.13.0",
    "react-dom": "^16.13.0",
    "rimraf": "^3.0.2",
    "sucrase": "^3.12.1",
    "typescript": "^3.8.2"
  },
  "jest": {
    "rootDir": "./src",
    "transform": {
      ".(js|jsx|ts|tsx)": "@sucrase/jest-plugin"
    }
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "prepare-commit-msg": "exec < /dev/tty && git cz --hook || true"
    }
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
